{
  "name": "un-speeches-browser",
  "version": "1.0.0",
  "description": "UN General Assembly Speeches Browser",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "react-router build",
    "dev": "react-router dev",
    "start": "react-router-serve ./build/server/index.js",
    "typecheck": "tsc",
    "lint": "eslint app --ext ts,tsx",
    "lint:fix": "eslint app --ext ts,tsx --fix",
    "format": "prettier --write \"app/**/*.{ts,tsx,js,jsx}\"",
    "format:check": "prettier --check \"app/**/*.{ts,tsx,js,jsx}\"",
    "knip": "knip",
    "check": "npm run typecheck && npm run lint && npm run format:check && npm run knip",
    "docker:build": "docker build -t un-speeches-browser .",
    "docker:run": "docker run -p 3000:3000 --name un-speeches-container un-speeches-browser",
    "docker:dev": "npm run docker:build && npm run docker:run",
    "docker:stop": "docker stop un-speeches-container && docker rm un-speeches-container",
    "docker:clean": "docker system prune -f && docker image prune -f"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@react-router/dev": "^7.6.2",
    "@react-router/node": "^7.6.2",
    "@react-router/serve": "^7.6.2",
    "@tailwindcss/vite": "^4.1.8",
    "@types/node": "^22.15.30",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.6",
    "better-sqlite3": "^11.10.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "d3": "^7.9.0",
    "isbot": "^5",
    "lucide-react": "^0.513.0",
    "postcss": "^8.5.4",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router": "^7.6.2",
    "sqlite3": "^5.1.7",
    "tailwind-merge": "^3.3.0",
    "tailwindcss": "^4.1.8",
    "topojson-client": "^3.1.0",
    "typescript": "^5.8.3",
    "vite": "^6.3.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/d3": "^7.4.3",
    "@types/topojson-client": "^3.1.5",
    "eslint": "^9.28.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.2.0",
    "knip": "^5.60.2",
    "prettier": "^3.5.3",
    "typescript-eslint": "^8.33.1"
  }
}
